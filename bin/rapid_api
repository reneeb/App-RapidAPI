#!/usr/bin/perl

# PODNAME: rapid_api.pl

use v5.20;

use strict;
use warnings;

use Getopt::Long;
use App::RapidAPI;

GetOptions(
    'model-file=s' => \my $mwb_file,
    'name=s'       => \my $name,
    'target-dir=s' => \my $target_dir,
);

if ( !$mwb_file || !-f $mwb_file ) {
    say 'Need MySQL Workbench file!';
    exit 1;
}

if ( !camel_case( $name ) ) {
    say 'App name must be CamelCase';
    exit 1;
}

$target_dir //= name_to_path( $name );

App::RapidAPI::build_app( $mwb_file, $name, $target_dir );

sub print_usage {
}
